/* components/UserCard/UserCard.wxss */
.m-person-card {
  width: 710rpx;
  height: 220rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  transition: transform .4s;
  position: relative;
  overflow: hidden;
}
.m-person-card .u-bg {
  position: relative;
  width: 710rpx;
  height: 220rpx;
  z-index: 1;
  border-radius: 30rpx;
}
.m-person-card .u-content {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,.4);
  border-radius: 30rpx;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.m-person-card .u-content .info {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 40rpx;
}
.m-person-card .u-content .header {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  flex: none;
}
.m-person-card .u-content .header .img {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}
.m-person-card .name {
  font-size: 45rpx;
  color: white;
  font-weight: bold;
}
.m-person-card .job, .m-person-card .company  {
  font-size: 24rpx;
  color: white;
}